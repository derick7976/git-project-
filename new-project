---
- name: Install Maven 
  hosts: all
  become: yes
  tasks:
    - name: Install Maven
      package:
        name: maven
        state: present
      
    - name: Verify Maven installation
      command: mvn --version
      register: maven_version
      changed_when: false
      
    - name: Display Maven version
      debug:
        msg: "{{ maven_version.stdout }}"